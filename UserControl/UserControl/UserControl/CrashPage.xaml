<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserControl.CrashPage"
             Appearing="ContentPage_Appearing"
             Disappearing="ContentPage_Disappearing">
    
        <StackLayout VerticalOptions="Center">
        <Button Text="DivideByZero" x:Name="buttonDivideByZero" Clicked="ButtonDivideByZero_Clicked"/>
        <Button Text="Format" x:Name="buttonFormat" Clicked="ButtonFormat_Clicked"/>
        <Button Text="StackOverflow" x:Name="buttonStackOverflow" Clicked="ButtonStackOverflow_Clicked"/>
        <Button Text="Kill" x:Name="buttonKillApp" Clicked="ButtonKillApp_Clicked"/>
    </StackLayout>
    
</ContentPage>