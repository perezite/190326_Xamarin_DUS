                 Property=Height,
                 Factor=0.333}"
                 RelativeLayout.WidthConstraint="{ConstraintExpression
                 Type=RelativeToParent,
                 Property=Width}"/>

        <BoxView BackgroundColor="HotPink" HeightRequest="100" WidthRequest="100"
